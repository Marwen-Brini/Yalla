{
    "name": "marwen-brini/yalla",
    "description": "A standalone PHP CLI framework built from scratch",
    "keywords": [
        "cli",
        "command-line",
        "console",
        "yalla",
        "php"
    ],
    "homepage": "https://github.com/marwen-brini/yalla",
    "license": "MIT",
    "authors": [
        {
            "name": "Marwen-Brini",
            "email": "brini.marwen@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.0|^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28",
        "phpstan/phpstan": "^1.10|^2.0",
        "phpstan/extension-installer": "^1.3|^1.4",
        "phpstan/phpstan-phpunit": "^1.3|^2.0"
    },
    "bin": [
        "bin/yalla"
    ],
    "autoload": {
        "psr-4": {
            "Yalla\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yalla\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --coverage --min=100",
        "test-coverage": "vendor/bin/pest --coverage --coverage-html build/coverage",
        "test-coverage-ci": "vendor/bin/pest --coverage --min=100 --coverage-clover build/logs/clover.xml",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "platform-check": false
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}